<div class="vehicle-detail-container">
  <div class="vehicle-image">
    <img src="<%= item.inv_image %>" alt="Image of <%= item.inv_make %> <%= item.inv_model %>">
  </div>
  <div class="vehicle-info">
    <h1><%= item.inv_make %> <%= item.inv_model %></h1>
    <br>
    <p class="car-detais"><strong>Price:</strong> $<%= new Intl.NumberFormat('en-US').format(item.inv_price) %></p>
    <br>
    <p class="car-detais"><strong>Description:</strong> <%= item.inv_description %></p>
    <br>
    <p class="car-detais"><strong>Color:</strong> <%= item.inv_color %></p>
    <br>
    <p class="car-detais"><strong>Mileage:</strong> <%= new Intl.NumberFormat('en-US').format(item.inv_miles) %> mi</p>
  </div>
</div>


